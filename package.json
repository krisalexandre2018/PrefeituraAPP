{
  "name": "sistema-ocorrencias-urbanas",
  "version": "1.0.0",
  "description": "Sistema completo de ocorrÃªncias urbanas para vereadores - Monorepo",
  "private": true,
  "scripts": {
    "setup": "npm run install:all && npm run prisma:generate",
    "install:all": "npm install && cd backend && npm install && cd ../mobile && npm install && cd ..",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "start:backend": "cd backend && npm start",
    "start:mobile": "cd mobile && npm start",
    "prisma:generate": "cd backend && npm run prisma:generate",
    "prisma:migrate": "cd backend && npm run prisma:migrate",
    "prisma:studio": "cd backend && npm run prisma:studio",
    "prisma:reset": "cd backend && npx prisma migrate reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:restart": "docker-compose restart",
    "validate-env": "node scripts/validate-env.js",
    "backup:db": "node scripts/backup-db.js",
    "clean": "npm run clean:backend && npm run clean:mobile",
    "clean:backend": "cd backend && rm -rf node_modules package-lock.json",
    "clean:mobile": "cd mobile && rm -rf node_modules package-lock.json",
    "clean:win": "cd backend && rmdir /s /q node_modules & cd ../mobile && rmdir /s /q node_modules",
    "test:backend": "cd backend && npm test",
    "test:coverage": "cd backend && npm run test:coverage",
    "lint": "npm run lint:backend && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint --if-present",
    "lint:mobile": "cd mobile && npm run lint --if-present",
    "agents": "node agents/orchestrator.js",
    "agent:arquiteto": "node agents/ArquitetoSistema.js",
    "agent:backend": "node agents/BackendEngineer.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Sistema Vereadores",
  "license": "ISC",
  "keywords": [
    "vereadores",
    "ocorrencias",
    "urbanas",
    "monorepo",
    "react-native",
    "express",
    "postgresql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/sistema-ocorrencias-urbanas"
  }
}
